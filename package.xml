            <pearinstaller>
                <min>1.4.0</min>
            </pearinstaller>
        </required>
        <optional>
            <extension>
                <name>openssl</name>
            </extension>
        </optional>
    </dependencies>

    <providesextension>stomp</providesextension>

    <extsrcrelease>
        <configureoption default="/usr" name="with-openssl-dir" prompt="OpenSSL install prefix (no to disable SSL support)" />

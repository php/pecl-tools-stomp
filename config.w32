ARG_ENABLE("stomp", "enable stomp support", "no");

if (PHP_STOMP != "no") {
	if (CHECK_LIB("ssleay32.lib", "stomp", PHP_STOMP) && CHECK_LIB("libeay32.lib", "stomp", PHP_STOMP)) {
		ADD_FLAG("CFLAGS_STOMP", "/DHAVE_STOMP_SSL=1");
	}

	EXTENSION("stomp", "stomp.c php_stomp.c");
}

